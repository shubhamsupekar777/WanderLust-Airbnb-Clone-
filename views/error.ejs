<!-- views/error.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Error - <%= err.statusCode || 500 %></title>
    <style>
        body {
            font-family: Arial, sans-serif;
            padding: 30px;
            background-color: #fce4e4;
            color: #b71c1c;
        }
        .error-box {
            background: white;
            padding: 20px;
            border: 1px solid #f44336;
            border-radius: 8px;
            max-width: 600px;
            margin: auto;
        }
        h1 {
            margin-top: 0;
            color: #d32f2f;
        }
    </style>
</head>
<body>
    <div class="error-box">
        <h1>Error <%= err.statusCode || 500 %></h1>
        <p><%= err.message || 'Something went wrong!' %></p>

        <% if (err.stack) { %>
            <pre><%= err.stack %></pre>
        <% } %>
    </div>
</body>
</html>
