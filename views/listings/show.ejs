<% layout("/layouts/boilerplate") %>

<div class="container my-4">

  <!-- Listing Details Section -->
  <div class="text-center show-listing">
    <h3><%= listing.title %></h3>

    <div class="card col-6 mx-auto show-card">
      <img src="<%= listing.image.url %>" class="card-img-top show-img" alt="listing_image">
      <div class="card-body text-start">
        <p><i>Owned By <%= listing.owner.username %></i></p>
        <p><%= listing.description %></p>
        <p>&#8377;<%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %></p>
        <p><%= listing.location %></p>
        <p><%= listing.country %></p>
      </div>
    </div>

    <% if (currUser && listing.owner._id.equals(currUser._id)) { %>
      <div class="mt-3 d-flex justify-content-center gap-2">
        <a href="/listings/<%= listing._id %>/edit" class="btn btn-dark">Edit</a>
        <form method="POST" action="/listings/<%= listing._id %>?_method=DELETE">
          <button class="btn btn-danger">Delete</button>
        </form>
      </div>
    <% } %>
  </div>

  <!-- Review Section -->
  <div class="review-section col-8 mx-auto">
    <hr />
    <% if (currUser) { %>
      <h4>Leave a Review</h4>

      <form action="/listings/<%= listing._id %>/reviews" method="POST" novalidate class="needs-validation">

        <div class="mb-3">
          <label for="rating" class="form-label">Rating</label>
          <fieldset class="starability-slot">
  <input type="radio" id="no-rate" class="input-no-rate" name="review[rating]" value="0" checked aria-label="No rating." />
  <input type="radio" id="first-rate1" name="review[rating]" value="1" />
  <label for="first-rate1" title="Terrible">1 star</label>
  <input type="radio" id="first-rate2" name="review[rating]" value="2" />
  <label for="first-rate2" title="Not good">2 stars</label>
  <input type="radio" id="first-rate3" name="review[rating]" value="3" />
  <label for="first-rate3" title="Average">3 stars</label>
  <input type="radio" id="first-rate4" name="review[rating]" value="4" />
  <label for="first-rate4" title="Very good">4 stars</label>
  <input type="radio" id="first-rate5" name="review[rating]" value="5" />
  <label for="first-rate5" title="Amazing">5 stars</label>
</fieldset>
        </div>

        <div class="mb-3">
          <label for="comment" class="form-label">Comment</label>
          <textarea name="review[comment]" id="comment" cols="30" rows="4" class="form-control" required></textarea>
          <div class="invalid-feedback">Please add some comment for the review</div>
        </div>

        <div class="text-center">
          <button class="btn btn-outline-dark">Submit</button>
        </div>
      </form>
    <% } else { %>
      <p class="text-center text-muted">Login to leave a review.</p>
    <% } %>
  </div>

  <!-- All Reviews Section -->
  <div class="all-reviews col-8 mx-auto">
    <hr />
    <h5>All Reviews</h5>

    <div class="row">
      <% for (review of listing.reviews) { %>
        <div class="card col-md-5 ms-3 mb-3">
          <div class="card-body">
            <h5 class="card-title"><%= review.author.username %></h5>
            <p class="starability-result card-text" data-rating="<%= review.rating %>"></p>
            <p class="card-text"><%= review.comment %></p>
          </div>

          <% if (currUser && review.author._id.equals(currUser._id)) { %>
            <form method="POST" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=DELETE" class="mb-3">
              <button class="btn btn-sm btn-dark">Delete</button>
            </form>
          <% } %>
        </div>
      <% } %>
    </div>
  </div>
</div>
